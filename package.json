    "@wdio/spec-reporter": "^8.24.0",
    "chromedriver": "^119.0.0",
    "geckodriver": "^4.2.1",
    "lockfile-lint": "^4.12.1",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-edgedriver-service": "^3.0.3",
    "wdio-geckodriver-service": "^5.0.2",
    "webdriverio": "^8.24.1"
  }
