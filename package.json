  "scripts": {
    "configure": "npm run configure:chromedriver && npm run configure:edgedriver && npm run configure:geckodriver",
    "configure:chromedriver": "npm explore chromedriver -- npm run install",
    "configure:edgedriver": "npm explore edgedriver -- npm run install",
    "configure:geckodriver": "npm explore geckodriver -- npm run postinstall",
    "lint": "npm run lint:lockfile",
    "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts npm --allowed-schemes \"https:\" --empty-hostname false"
  },
  "devDependencies": {
    "@wdio/cli": "^8.24.1",
    "@wdio/firefox-profile-service": "^8.24.0",
    "@wdio/local-runner": "^8.24.1",
